<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".CBLiteConsoleActivity">

    <GridLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_marginTop="30dp"
            android:id="@+id/gridLayout">

        <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="View All Docs"
                android:id="@+id/button_alldocs"
                android:layout_row="1"
                android:layout_column="0"/>

        <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Add X Docs"
                android:id="@+id/buttonAddXDocs"
                android:layout_row="2"
                android:layout_column="0"/>

        <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="DB Stats"
                android:id="@+id/button_dbstats"
                android:layout_row="0"
                android:layout_column="0"/>

        <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Delete All Docs"
                android:id="@+id/buttonDeleteDocs"
                android:layout_row="3"
                android:layout_column="0"/>

        <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Add X Docs + Attch"
                android:id="@+id/buttonAddXDocsPlusAttachments"
                android:layout_row="2"
                android:layout_column="1"/>

    </GridLayout>

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Couchbase Lite Console"
            android:id="@+id/textView"
            android:layout_alignParentTop="true"
            android:layout_alignLeft="@+id/gridLayout"/>

</RelativeLayout>
